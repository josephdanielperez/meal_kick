<% if @recipe %>
  <h1>Comments for <%= @recipe.title %></h1>
<% else %>
  <h2>All Comments</h2>
<% end %>

<ul>
<% @comments.each do |c|%>
  <li><strong><%= c.user.username%></strong> said: <strong>"<%= c.content%>"</strong> about this recipe: <strong><%= link_to c.recipe.title, recipe_path(c.recipe_id) %></strong></li>
<% end %>
</ul>
