<h1> Add a Comment: </h1>

 <%= render partial: "layouts/errors", locals: {object: @comment} %>

<%= form_for(@comment) do |f| %>

   <p>
    <%= f.label :content, "Tell us! How was this recipe?" %><br/>
    <%= f.hidden_field :recipe_id %>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>