<h1> New Recipe: </h1>

<%= form_for(@recipe) do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %><br><br>

    <%= f.label :description %>
    <%= f.text_area :description %><br><br>

    <%= f.label :instructions %>
    <%= f.text_area :instructions %><br><br>

    <%= f.submit %>


<% end %>
