  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :category %><br>
    <%= f.collection_select :category_id, Category.order(:name),:id,:name, include_blank: true %>
  </div>  

  <div class="content">
  <%= f.label :description %><br>
  <%= f.text_area :description %>
  </div>

  <div class="content">
  <%= f.label :instructions %><br>
  <%= f.text_area :instructions, size: "50x18" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>