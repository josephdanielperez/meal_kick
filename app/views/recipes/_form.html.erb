
<%= form_for @recipe do |f| %>

 <%= render partial: "layouts/errors", locals: {object: @recipe} %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div><br>

  <div class="field">
    <%= f.label :category_id, "Select a Category Below:" %><br>
    <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: true %>
  </div>  


  <div class="content">
  <%= f.label :description %><br>
  <%= f.text_area :description %>
  </div>

  <div class="content">
  <%= f.label :instructions %><br>
  <%= f.text_area :instructions, size: "50x18" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>