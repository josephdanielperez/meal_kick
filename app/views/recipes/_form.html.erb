
<%= form_for @recipe do |f| %>

 <%= render partial: "layouts/errors", locals: {object: @recipe} %>

<%= f.hidden_field :category_id %>

    <%= f.label :title %>
    <%= f.text_field :title %><br>
   <br>

  <% if !params[:category_id] %>

    <%= f.label :category_id, "Select a Category Below:" %><br>
    <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: true %><br>
 
  <% end %>


  <%= f.label :description %><br>
  <%= f.text_area :description %><br><br>


  <%= f.label :instructions %><br>
  <%= f.text_area :instructions, size: "50x18" %><br><br>
  
    <%= f.submit %>



  <% end %> 