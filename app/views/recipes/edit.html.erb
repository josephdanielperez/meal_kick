<h1> Edit Your Recipe: </h1>

<%= render partial: "layouts/errors", locals: {object: @recipe} %>

<%= form_for(@recipe) do |f|%>

  <%= f.label "Choose a Category:" %>
  <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: true %><br>

   <p>Or Create a New Category:
  <%= f.fields_for :category do |c| %>
    <%= c.text_field :name %>
  <% end %>
  </p>


<br><%= f.label :title %>
  <%= f.text_field :title %>
  <br><br>
  <%= f.label :content %>
  <%= f.text_area :content %>


  <%= f.submit %>

<% end %>